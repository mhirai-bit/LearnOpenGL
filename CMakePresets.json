{
  "version": 6,
  "configurePresets": [
    {
      "name": "mac-ninja-debug",
      "displayName": "macOS Ninja Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-debug",
      "configurePreset": "mac-ninja-debug",
      "jobs": 8
    }
  ]
}
